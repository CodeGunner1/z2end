//EJERCICIO 2
function fct(n: Integer): Integer;
var
  i, f: Integer;
begin
  i := 0;
  f := 1;
  while i < n do
  begin
    i := i + 1;
    f := f * i;
  end;
  Result := f;
end;


function ejercicio2_numeros(n: Integer): real;
var
  x: Integer;
  sw: Boolean;
  cont: Integer;
  numerador: Integer;
  denomerador: Integer;
  frac: real;
  suma: real;
begin
  sw := True;
  cont := 1;
  suma := 0;
  while n > c do
  begin
    c := c + 1;

    numerador := cont * cont; // 1*1 = 1
    denomerador := fct(cont);
    cont := cont + 1;
    frac := numerador / denomerador;

    if sw = True then
    begin
      // verdadero
      suma := suma - frac;
      sw := False;
    end
    else
    begin
      // falso
      suma := suma + frac;
      sw := True;
    end;

  end;

  Result := suma;

end;


  { LLAMADA 2  COPIAR ABAJO }
  Edit3.Text := FloatToStr(ejercicio2_numeros(n));
